{
    "apiName": "Indian Government Open Data Platform",
    "description": "Configuration for accessing government procurement and contract data from data.gov.in",
    "baseURL": "https://api.data.gov.in/resource",
    "documentation": "https://data.gov.in/help/how-to-use-datasets-apis",
    "authentication": {
        "type": "API_KEY",
        "method": "query_parameter",
        "parameterName": "api-key",
        "howToObtain": [
            "1. Visit https://data.gov.in",
            "2. Click on 'Register' or 'Sign In'",
            "3. Complete registration with email verification",
            "4. Login to your account",
            "5. Navigate to 'My Account' or 'API Key' section",
            "6. Generate or copy your API key",
            "7. Add the key to your .env file as DATA_GOV_IN_API_KEY"
        ]
    },
