    "endpoints": {
        "getContracts": {
            "path": "/{dataset_id}",
            "method": "GET",
            "description": "Fetch contracts from a specific dataset",
            "parameters": {
                "required": [
                    {
                        "name": "api-key",
                        "type": "string",
                        "description": "Your API key from data.gov.in"
                    }
                ],
                "optional": [
                    {
                        "name": "format",
                        "type": "string",
                        "default": "json",
                        "options": [
                            "json",
                            "xml",
                            "csv"
                        ],
                        "description": "Response format"
                    },
                    {
                        "name": "limit",
                        "type": "integer",
                        "default": 10,
                        "max": 100,
                        "description": "Number of records to return"
                    },
                    {
                        "name": "offset",
                        "type": "integer",
                        "default": 0,
                        "description": "Pagination offset"
                    },
                    {
                        "name": "filters",
                        "type": "object",
                        "description": "Filter criteria (field:value pairs)"
                    }
                ]
            },
            "exampleRequest": "https://api.data.gov.in/resource/9ef84268-d588-465a-a308-a864a43d0070?api-key=YOUR_API_KEY&format=json&limit=20&offset=0",
            "exampleResponse": {
                "index_name": "9ef84268-d588-465a-a308-a864a43d0070",
                "title": "Government Procurement Data",
                "total": 1500,
                "count": 20,
                "records": [
                    {
                        "id": "PROC-2024-001",
                        "tender_id": "TND-2024-12345",
                        "organization_name": "Food Corporation of India",
                        "buyer_name": "FCI Punjab Division",
                        "item_description": "Procurement of wheat for PDS",
                        "title": "Wheat Procurement - Rabi Season 2024-25",
                        "quantity": "500",
                        "price": "2150",
                        "estimated_value": "1075000",
                        "contract_value": "1075000",
                        "delivery_date": "2025-03-31",
                        "end_date": "2025-03-31",
                        "location": "Punjab",
                        "city": "Ludhiana",
                        "state": "Punjab",
                        "status": "Open",
                        "description": "Procurement of wheat for Public Distribution System",
                        "published_date": "2024-12-01",
                        "created_date": "2024-11-28",
                        "department": "Ministry of Consumer Affairs, Food & Public Distribution"
                    }
                ]
            }
        }
    },
